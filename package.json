{
  "name": "rotate-array",
  "version": "1.0.0",
  "description": "CLI coding challenge",
  "main": "cli.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "tsc -p tsconfig.json && node cli.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint --fix . --ext .ts",
    "test": "jest"
  },
  "bin": {
    "rotate": "./bin/index.js"
  },
  "keywords": [
    "cli",
    "array"
  ],
  "author": "godson.ukpere@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.17",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "eslint": "^8.30.0",
    "pre-commit": "^1.2.2",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "csv-stream": "^0.2.0",
    "fast-csv": "^4.3.6",
    "jest": "^29.3.1"
  },
  "jest": {
    "rootDir": "./",
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testEnvironmentOptions": {
      "url": "http://localhost"
    },
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "testPathIgnorePatterns": [],
    "moduleFileExtensions": [
      "ts",
      "js",
      "tsx",
      "json",
      "node"
    ],
    "coverageDirectory": "./coverage/unit",
    "coverageThreshold": {
      "global": {
        "branches": 88,
        "functions": 88,
        "lines": 88
      }
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.ts"
    ]
  },
  "engines": {
    "node": "18"
  },
  "pre-commit": [
    "lint",
    "build"
  ]
}
